<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/marathonBackground">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/colorShimmer"
            android:contentDescription="@string/icon"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_back_circle_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cover">


            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@color/gapBackground" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/photo1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:cardBackgroundColor="@color/colorShimmer"
                        app:cardCornerRadius="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/photo1"
                        app:layout_constraintTop_toTopOf="@id/photo1">


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_15sdp"
                            app:cardBackgroundColor="@color/colorShimmer"
                            app:cardCornerRadius="10dp" />


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            app:cardBackgroundColor="@color/colorShimmer"
                            app:cardCornerRadius="10dp" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/gapBackground" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/photo2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:cardBackgroundColor="@color/colorShimmer"
                        app:cardCornerRadius="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/photo2"
                        app:layout_constraintTop_toTopOf="@id/photo2">


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_15sdp"
                            app:cardBackgroundColor="@color/colorShimmer"
                            app:cardCornerRadius="10dp" />


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            app:cardBackgroundColor="@color/colorShimmer"
                            app:cardCornerRadius="10dp" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/colorShimmer"
                    app:cardCornerRadius="10dp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="@id/cover"
            app:layout_constraintTop_toBottomOf="@id/cover" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>